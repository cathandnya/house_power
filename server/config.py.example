# Wi-SUN Bルート認証（電力会社から届いたもの）
BROUTE_ID = "00000000000000000000000000000000"
BROUTE_PASSWORD = "XXXXXXXXXXXX"

# シリアルポート
SERIAL_PORT = "/dev/ttyUSB0"
BAUD_RATE = 115200

# APIサーバー
API_HOST = "0.0.0.0"
API_PORT = 8000

# 更新間隔
POLL_INTERVAL = 5  # 瞬時電力の取得間隔（秒）
ENERGY_POLL_INTERVAL = 1800  # 積算電力量の取得間隔（秒）※スマートメーターが30分更新

# 契約アンペア（使用量バー計算用）
CONTRACT_AMPERAGE = 40  # A（40A契約 = 最大4000W）

# 警告閾値（LINE通知用）
POWER_THRESHOLD = 4000  # W

# === Mock Mode ===
# True: Wi-SUNアダプタなしでモックデータで動作
# False: 実際のWi-SUNアダプタを使用（デフォルト）
MOCK_MODE = False

# 通知クールダウン（分）- 連続通知を防止
NOTIFY_COOLDOWN_MINUTES = 5
# VAPID鍵（空の場合は初回起動時に自動生成してvapid_keys.jsonに保存）
# 手動設定する場合は以下に記載
VAPID_PUBLIC_KEY = ""
VAPID_PRIVATE_KEY = ""
VAPID_CLAIMS_EMAIL = "mailto:admin@example.com"
